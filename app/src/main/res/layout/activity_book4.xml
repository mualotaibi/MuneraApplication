<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book4">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="315dp"
        android:layout_height="373dp"
        android:src="@drawable/book4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-154dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="233dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="جمهورية الدومينيكان"
        android:textColor="#000"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.542" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="375dp"
        android:layout_height="168dp"
        android:layout_marginTop="112dp"
        android:text="هى دولة فى جزيرة هيسبانيولا وجزر من أرخبيل جزر الأنتيل الكبرى فى منطقة بحر الكاريبى أصبحت الجمهورية الوجهة السياحية الأكبر فى منطقة بحر الكاريبى بما فى ذلك ملاعب الغولف المفتوحة طوال العام يقع فى هذة الأرض الجبلية بحيرة إنريكييو وهى أكبر بحيرة فى منطقة الكاريبى وتمتلك المنطقة  تنوع بيولجى كبير حيث تحوى الكثير من الشواطئ ذات الرمال البيضاء والمنتجعات والغابات الرطبة والصحارى وأشجار المانغروف والشعاب المرجانية والسافانا والقمم الخضراء المرتفعة والشلالات وأشجار النخيل وغابات الصنوبر المنتشرة على طول مسارات جبال الألب مما جعلها  المنطقة الأمثل للمسافرين ذوى الميزانيات المحدودة."
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonbook3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonbook4"
        android:layout_width="420dp"
        android:layout_height="69dp"
        android:background="#70AAC3"
        android:text="حجز"
        android:textColor="#fff"
        android:textSize="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="771dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"

        android:layout_marginEnd="16dp"
        android:background="#F3E999"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>