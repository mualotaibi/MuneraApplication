<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book5">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="337dp"
        android:layout_height="354dp"
        android:layout_marginStart="36dp"
        android:src="@drawable/book5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-65dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="175dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="مقاطعة بالى"
        android:textColor="#000"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.095" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="366dp"
        android:layout_height="225dp"
        android:text="هى أحدى مقاطعات أندونسيا وتعد وجهة سياحية دولية حيث يميزها جانبها الروحى ومعابدها القديمة وحقول الأرز المتوهجة فى الشمس وشواطئها النابضة بالحياة والتلال الهادئة مع الكثير من المحلات التجارية والمطاعم ويوجد فيها أيضآ تكوين صخرى بركانى يعد من أهم معالمها أسمة تاناة لوط"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonbook5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.431" />

    <Button
        android:id="@+id/buttonbook5"
        android:layout_width="420dp"
        android:layout_height="69dp"
        android:background="#70AAC3"
        android:text="حجز"
        android:textColor="#fff"
        android:textSize="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="771dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="140dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"

        android:layout_marginEnd="16dp"
        android:background="#F3E999"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>