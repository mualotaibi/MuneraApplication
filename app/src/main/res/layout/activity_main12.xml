<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity12">


    <Button
        android:background="@drawable/kenet"
        android:id="@+id/kenet"
        android:layout_width="326dp"
        android:layout_height="193dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toTopOf="@+id/visa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/kenet" />

    <Button
        android:id="@+id/visa"
        android:layout_width="340dp"
        android:layout_height="211dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/visa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/visa" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="طرق الدفع :"
        android:textColor="#000"
        android:textSize="@dimen/_40sdp"
        app:layout_constraintBottom_toTopOf="@+id/kenet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>